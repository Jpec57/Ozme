<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:padding="15sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/rounded_button_oz"
        android:padding="5sp"
        android:weightSum="10"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:contentDescription="@string/logo"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/logo2"/>
            <ImageView
                android:layout_width="39sp"
                android:layout_height="39sp"
                android:contentDescription="@string/logo"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/ose"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="5sp" />
        </RelativeLayout>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="38sp"
            android:inputType="text"
            android:maxLength="50"
            android:id="@+id/editText"
            android:padding="3sp"
            android:layout_margin="2sp"
            android:layout_marginTop="-10sp"
            android:hint="... à vous de choisir la suite"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/ok"
            android:id="@+id/next"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10sp"
        android:textSize="18sp"
        android:text="On vous aide avec des exemples :"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoriesRecycler"/>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:text="Prévisualisation de votre profil :"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/friendProfilePicture"
        android:layout_width="300sp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="300sp"/>
        <RelativeLayout
            android:layout_width="300sp"
            android:layout_height="250sp"
            android:layout_marginBottom="50sp"
            android:id="@+id/pink"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pink_filter">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ose"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/ose_logo"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:contentDescription="@string/logo"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/logo2"/>
                <ImageView
                    android:layout_width="39sp"
                    android:layout_height="39sp"
                    android:contentDescription="@string/logo"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="-4sp"
                    android:src="@drawable/ose"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="5sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>