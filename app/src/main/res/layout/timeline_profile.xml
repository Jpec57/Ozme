<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20sp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        app:cardCornerRadius="5sp"
        android:padding="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="350sp">

    <ImageSwitcher
        android:id="@+id/imageSwitcher1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:src="@drawable/ic_close_white_24dp"
        android:id="@+id/close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0.05"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_above="@id/desc"
        android:id="@+id/name_age"
        android:text="Jean-Paul BELLA, 21"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/desc"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0.05"
        android:text="IngÃ©nieur informatique"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:shadowColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:shadowDx="2"
        android:shadowDy="2"
        android:id="@+id/time"
        android:shadowRadius="4"
        android:text="Vu il y a 2 minutes"/>

</RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="2sp"
        android:background="@drawable/timeline_bottom"
        android:baselineAligned="false">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="-5sp"
            android:layout_height="40sp"
            android:id="@+id/heart"
            android:src="@drawable/heart"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/lightning"
            android:layout_height="30sp"
            android:src="@drawable/lightning"/>
    </LinearLayout>

</LinearLayout>
