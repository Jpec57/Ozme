<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="2"
            android:id="@+id/img">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/helpme"
                android:background="#000000"
                android:layout_height="wrap_content">


                <com.facebook.login.widget.ProfilePictureView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:scaleType="matrix"
                    android:id="@+id/test"/>
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/profile_photo"
                    android:id="@+id/photo"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/name"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:shadowRadius="2"
                            android:shadowDy="1"
                            android:shadowDx="1"
                            android:textColor="@color/white"
                            android:id="@+id/fb_name_age"
                            android:text="Julie, 28"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:src="@drawable/my_account_edit"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="80sp"
                        android:layout_marginRight="80sp"
                        android:padding="5sp"
                        android:id="@+id/challenge"
                        android:background="@drawable/my_account_rounded_button">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp">
                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="15sp"
                                android:contentDescription="@string/logo"
                                android:layout_marginLeft="2sp"
                                android:src="@drawable/logo2"
                                android:layout_marginStart="2sp" />
                            <ImageView
                                android:layout_width="20sp"
                                android:layout_marginTop="-2sp"
                                android:layout_height="20sp"
                                android:contentDescription="@string/logo"
                                android:layout_marginLeft="7sp"
                                android:layout_marginRight="7sp"
                                android:src="@drawable/ose"
                                android:layout_marginStart="7sp"
                                android:layout_marginEnd="7sp" />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/challenge_text"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text=" me faire rire comme ma soeur qui est la meilleure"/>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop="0sp"
            android:layout_marginTop="-10sp"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/profile_activite"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:orientation="vertical"
                    android:layout_marginStart="15sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Activité"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:text="Changer l'intitulé de votre poste"
                            android:layout_marginEnd="10sp" />
                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:src="@drawable/my_account_edit"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ce que j'aime faire" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!-- A sScrollView can only have one child-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/recycler"/>
            </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ce que je préfère" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Boîte de nuit" />
                <!--
                <ProgressBar
                    android:id="@+id/progressBarback"
                    style="@style/CustomProgressBarHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />-->
                <SeekBar
                    android:layout_width="0dp"
                    android:id="@+id/seekBar1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Soirée ciné" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="New York" />

                <SeekBar
                    android:layout_width="0dp"
                    android:id="@+id/seekBar2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Bali" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Japonais" />

                <SeekBar
                    android:layout_width="0dp"
                    android:id="@+id/seekBar3"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Fastfood" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ce que je pense" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    android:layout_weight="1"
                    android:src="@drawable/separate" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                android:text="Choisissez une phrase à compléter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/complete"
                android:visibility="gone"
                android:text="@string/todo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="30sp"
                android:orientation="horizontal"
                android:layout_marginStart="30sp">
                <ImageView
                    android:layout_width="15sp"
                    android:paddingTop="5sp"
                    android:layout_height="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginEnd="30sp"
                    android:src="@drawable/profile_bullet_point_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/message"
                    android:text="Choisissez un exemple"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7sp"
                android:text="Décrivez vous en une phrase"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="30sp"
                android:orientation="horizontal"
                android:layout_marginStart="30sp">
                <ImageView
                    android:layout_width="15sp"
                    android:paddingTop="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_height="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginEnd="30sp"
                    android:src="@drawable/profile_bullet_point_pink"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:hint="Ecrivez ce que vous voulez..."/>
            </LinearLayout>

                <Button
                    android:layout_width="70sp"
                    android:layout_height="35sp"
                    android:id="@+id/next"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_button_oz"
                    android:text="Suivant"/>



        </LinearLayout>


    </LinearLayout>
</ScrollView>
