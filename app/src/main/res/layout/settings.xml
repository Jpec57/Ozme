            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            app:textAboveThumbsColor="@color/colorPrimaryDark"
            app:showLabels="false"
            app:valuesAboveThumbs="true"
            app:absoluteMaxValue="18"
